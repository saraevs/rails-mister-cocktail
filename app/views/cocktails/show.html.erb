<h1>
  <%= @cocktail.name %>
</h1>

<h3>
  Ingredients
</h3>

<% doses = @cocktail.doses %>
<ul>
  <% doses.each do |dose| %>
    <li>
      <%= dose.ingredient.name %> -
      <%= dose.description %>
      ( <%= link_to '-', doses_path(dose.id), method: :delete %> )
    </li>
  <% end %>
</ul>

<%= render "doses/new", cocktail: @cocktail, dose: @dose %> <br>
<%= link_to 'Back to cocktails', cocktails_path  %>
